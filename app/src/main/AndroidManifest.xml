<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.oli.cointossfinal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cointoss"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cointoss"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:configChanges="orientation|screenSize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:launchMode="singleTask" android:configChanges="orientation|screenSize"/>
        <activity android:name=".Cheating_Activity" android:label="Special Mode" android:launchMode="singleTask" android:configChanges="orientation|screenSize"></activity>
    </application>

</manifest>